/**
 * Site Styles
 */
@import 'bootstrap.css'
/* custom font */
@import url('http://fonts.googleapis.com/css?family=Droid+Sans|Cabin:400,700|Chivo');

/* variables */
$link-color = #3279a8
$link-color-hover = #2a6589

/* Override some defaults */
html, body
  font-family: 'Droid Sans', 'Helvetica', arial, sans-serif
  background-color: #eee
body
  padding: 0
h1, h2, h3, h4, h5, h6
  color: #000
h1, h2
  font-family: 'Cabin', Helvetica, Arial, sans-serif
  font-weight: bold
h2
  font-size: 26px
  margin-bottom: 10px
  border-bottom: 4px solid #ddd
h3
  border-bottom: 2px solid #ddd
h3, h4, h5, h6
  font-family: 'Chivo', Helvetica, Arial, sans-serif
  font-weight: bold
a
  color: $link-color
  &:hover
    color: $link-color-hover


.container
  margin-bottom: 50px
#topnav
  padding: 20px 0
  margin-bottom: 40px
  font-size: 1.2em
  border-bottom: 2px solid #6b98b2

  a
    color: $link-color
    &:hover
      color: $link-color-hover

  .container
    margin-bottom: 0

  // main logo
  .navbar-brand
    font-family: 'Cabin', Helvetica, Arial, sans-serif
    font-size: 1.6em
    font-weight: bold
    color: #222

/* Main content area */
#page_content
  background-color: #fff
  padding: 20px
  -webkit-box-shadow: 0 1px 2px rgba(0, 0, 0, 0.15)
  -moz-box-shadow: 0 1px 2px rgba(0, 0, 0, 0.15)
  box-shadow: 0 1px 2px rgba(0, 0, 0, 0.15)

/* page footer */
#page_foot
  padding: 20px 10px

@import 'syntax-highlighting'


